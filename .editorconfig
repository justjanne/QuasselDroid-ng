[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[{*.mod, *.dtd, *.ent, *.elt}]
indent_style = space
indent_size = 2

[{*.jhm, *.rng, *.wsdl, *.fxml, *.xslt, *.jrxml, *.ant, *.xul, *.xsl, *.xsd, *.tld, *.jnlp, *.xml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.java]
indent_style = space
indent_size = 2

[{*.kts, *.kt}]
indent_style = space
indent_size = 2

[{*.yml, *.yaml}]
indent_style = space
indent_size = 2
